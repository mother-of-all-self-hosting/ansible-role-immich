{% if immich_server_container_labels_traefik_enabled %}
traefik.enable=true

{% if immich_server_container_labels_traefik_docker_network %}
traefik.docker.network={{ immich_server_container_labels_traefik_docker_network }}
{% endif %}

{% set middlewares = [] %}

{% if immich_server_container_labels_traefik_path_prefix != '/' %}
traefik.http.middlewares.{{ immich_server_identifier }}-slashless-redirect.redirectregex.regex=({{ immich_server_container_labels_traefik_path_prefix | quote }})$
traefik.http.middlewares.{{ immich_server_identifier }}-slashless-redirect.redirectregex.replacement=${1}/
{% set middlewares = middlewares + [immich_server_identifier + '-slashless-redirect'] %}
{% endif %}

{% if immich_server_container_labels_traefik_path_prefix != '/' %}
traefik.http.middlewares.{{ immich_server_identifier }}-strip-prefix.stripprefix.prefixes={{ immich_server_container_labels_traefik_path_prefix }}
{% set middlewares = middlewares + [immich_server_identifier + '-strip-prefix'] %}
{% endif %}

{% if immich_server_container_labels_traefik_additional_response_headers.keys() | length > 0 %}
{% for name, value in immich_server_container_labels_traefik_additional_response_headers.items() %}
traefik.http.middlewares.{{ immich_server_identifier }}-add-headers.headers.customresponseheaders.{{ name }}={{ value }}
{% endfor %}
{% set middlewares = middlewares + [immich_server_identifier + '-add-headers'] %}
{% endif %}

traefik.http.routers.{{ immich_server_identifier }}.rule={{ immich_server_container_labels_traefik_rule }}
{% if immich_server_container_labels_traefik_priority | int > 0 %}
traefik.http.routers.{{ immich_server_identifier }}.priority={{ immich_server_container_labels_traefik_priority }}
{% endif %}
traefik.http.routers.{{ immich_server_identifier }}.service={{ immich_server_identifier }}
{% if middlewares | length > 0 %}
traefik.http.routers.{{ immich_server_identifier }}.middlewares={{ middlewares | join(',') }}
{% endif %}
traefik.http.routers.{{ immich_server_identifier }}.entrypoints={{ immich_server_container_labels_traefik_entrypoints }}

traefik.http.routers.{{ immich_server_identifier }}.tls={{ immich_server_container_labels_traefik_tls | to_json }}
{% if immich_server_container_labels_traefik_tls %}
traefik.http.routers.{{ immich_server_identifier }}.tls.certResolver={{ immich_server_container_labels_traefik_tls_certResolver }}
{% endif %}

traefik.http.services.{{ immich_server_identifier }}.loadbalancer.server.port={{ immich_server_container_http_port }}
{% endif %}

{{ immich_server_container_labels_additional_labels }}
